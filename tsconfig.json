{
  "include": ["./"],
  "compilerOptions": {
    "target": "ES2019",
    "outDir": "./dist",
    "module": "ES2020",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  }
}
